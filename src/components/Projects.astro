---
import ProjectsCard from "./ProjectsCard.astro";
---

<section class="projects" id="projects">
  <ProjectsCard
    title="Dotfiles"
    link="https://github.com/Sophed/dotfiles"
    content="My personal Linux configs, scripts and wallpapers."
  />
  <ProjectsCard
    title="OCI-Claimer"
    link="https://github.com/Sophed/oci-claimer"
    content="Automatically create Oracle Cloud instances with Discord webhook alerts."
  />
  <ProjectsCard
    title="MCL"
    link="https://github.com/Sophed/mcl"
    content="Minecraft Lookup (MCL), a tiny CLI utility for quickly looking up player profiles."
  />
  <ProjectsCard
    title="EctoHash"
    link="https://github.com/Sophed/EctoHash"
    content="Simple scanning tool for Minecraft mods to check them against known cheats."
  />
</section>

<style>
  .projects {
    margin-inline: auto;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    width: 680px;
    gap: 30px;
    padding: 70px;
    @media screen and (max-width: 772px) {
      width: auto;
      padding: 70px 30px;
    }
    @media screen and (max-width: 387px;) {
      padding: 70px 10px;
    }
  }
</style>
